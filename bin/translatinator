#!/usr/bin/env ruby

require 'translatinator'
require 'optparse'
require 'pp'
require 'pry'

# container
options = {}

optparse = OptionParser.new do|opts|
  # TODO: Put command-line options here

  # This displays the help screen, all programs are
  # assumed to have this option.
  opts.on( '-use') do
    check = input[1..3]
      if check == 'use'
        words = input.split(' ')
        words.slice!(0)
        language = words[0].downcase
        text = words[1..words.length].join(' ')
        puts Translatinator.translate(language, text)
      else
        puts 'Input failure. Please try again (THIS TIME WITHOUT TYPOS).'
      end
    exit
  end
  opts.on( '-l', '--lang') do
    puts Translatinator.lang
    exit
  end
    opts.on( '-h', '--help') do
    puts Translatinator.help
    exit
  end
end


# Parse the command-line. Remember there are two forms
# of the parse method. The 'parse' method simply parses
# ARGV, while the 'parse!' method parses ARGV and removes
# any options found there, as well as any parameters for
# the options. What's left is the list of files to resize.
optparse.parse!

pp "Options:", options
pp "ARGV:", ARGV

