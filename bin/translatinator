#!/usr/bin/env ruby

require 'translatinator'
require 'optparse'
require 'pp'

# container
options = {}

optparse = OptionParser.new do|opts|

  opts.on( '-use') do
    language = ARGV[0].downcase
    text = ARGV[1]

    puts Translatinator.translate(language, text)
    exit
  end
  opts.on( '-lang') do
    puts ' '
    puts 'SUPPORTED LANGUAGES:'
    puts Translatinator.lang
    exit
  end
  opts.on('-help', '-menu') do
    puts Translatinator.help
    exit
  end
end

optparse.parse!

# CHECK VALUES
#   pp "Options:", options
#   pp "ARGV:", ARGV


#CALL THANGS
#   translatinator -lang
#   translatinator -l
#   translatinator use fr "HAVE A NICE DAY"
#   translatinator -h
#   translatinator -help
