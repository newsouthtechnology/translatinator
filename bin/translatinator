#!/usr/bin/env ruby

require 'translatinator'
require 'optparse'
require 'pp'

# container
options = {}

optparse = OptionParser.new do|opts|
  # TODO: Put command-line options here

  # This displays the help screen, all programs are
  # assumed to have this option.
  opts.on( '-i', '--interactive', 'Display this screen' ) do
    options[:interactive] = true
    exit
  end
  opts.on( '-h', '--help', 'Display this screen' ) do
    Translatinator.help
    exit
  end
end

# Parse the command-line. Remember there are two forms
# of the parse method. The 'parse' method simply parses
# ARGV, while the 'parse!' method parses ARGV and removes
# any options found there, as well as any parameters for
# the options. What's left is the list of files to resize.
optparse.parse!

pp "Options:", options
pp "ARGV:", ARGV


#CALL THANGS HERE
Translatinator.get_command(input)
# translatinator = Translatinator::TerminalClient.start


# translatinator lang
# translatinator use fr HAVE A NICE DAY
# translatinator help

# first portion of command matches file name THAT'S HOW IT KNOWS!
